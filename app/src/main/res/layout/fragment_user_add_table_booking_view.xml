<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.user.fragments.UserAddTableBookingView">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Give your table details"
                android:textSize="20sp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/table_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Table no example: 1"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_table_chart_24"
                android:drawablePadding="10dp"
                android:inputType="number"
                />
            <EditText
                android:id="@+id/date_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Pick A date"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_edit_calendar_24"
                android:drawablePadding="10dp"
                android:inputType="date"
                />
            <EditText
                android:id="@+id/time_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="Pick A time"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="10dp"
                android:inputType="time"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Booking"
        android:padding="10dp"
        android:insetTop="0dp"
        app:cornerRadius="0dp"
        android:gravity="center"
        android:insetBottom="0dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>