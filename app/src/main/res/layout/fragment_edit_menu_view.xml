<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="food"
            type="com.example.restaurantmanagement.views.models.FoodModel" />
    </data>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.admin.fragments.EditMenuView"
    >
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_btn_layout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/food"
                android:scaleType="centerCrop"
                android:layout_marginBottom="6dp"
                android:foodImage="@{food.image}"
                />
            <TextView
                android:id="@+id/show_selected_file_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/upload_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:padding="10dp"
                android:gravity="center"
                app:cornerRadius="0dp"
                android:insetBottom="0dp"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={food.title}"
                android:hint="Title"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_fastfood_24"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(food.price)}"
                android:hint="Price"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(food.calories)}"
                android:hint="Calories"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                app:drawableStartCompat="@drawable/ic_baseline_directions_run_24"
                android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={food.description}"
                android:hint="Description"
                android:padding="10dp"
                app:drawableStartCompat="@drawable/ic_baseline_edit_off_24"
                android:drawablePadding="10dp"
                android:lines="5"
                android:gravity="start"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/bottom_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_weight="50"
            android:padding="10dp"
            app:cornerRadius="0dp"
            android:gravity="center"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textColor="@color/white"
            app:backgroundTint="@color/delete"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update"
            android:layout_weight="50"
            android:padding="10dp"
            android:insetTop="0dp"
            app:cornerRadius="0dp"
            android:gravity="center"
            android:insetBottom="0dp"
            app:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            />
    </LinearLayout>
</RelativeLayout>
</layout>

