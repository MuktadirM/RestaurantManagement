<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    android:elevation="9dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="3dp"
    android:clickable="true"
    android:focusable="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/food"
            tools:src="@drawable/food"
            android:contentDescription="@string/food_image_desc"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="80"
            android:padding="4dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food name"
                android:textSize="18sp"
                android:textAlignment="center"
                />
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: 5RM"
                android:layout_below="@+id/title"
                />
            <TextView
                android:layout_below="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories : 455"
                />

        </RelativeLayout>
        <ImageButton
            android:id="@+id/remove_from_cart"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_remove_shopping_cart_24"
            android:padding="0dp"
            android:layout_margin="0dp"
            app:cornerRadius="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/app_name" />
    </LinearLayout>
</androidx.cardview.widget.CardView>