<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="food"
            type="com.example.restaurantmanagement.domain.models.food.Food"
            />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.user.fragments.UserMenuItemDetailsView"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/food"
                    android:src="@drawable/food"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`Title : `+food.title}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`Description : `+food.description}"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_attach_money_24"
                    android:text="@{`Price :`+food.price}"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:layout_alignParentBottom="true"
            >
            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:layout_weight="50"
                android:gravity="center"
                app:cornerRadius="0dp"
                android:padding="10dp"
                android:insetTop="0dp"
                android:textColor="@color/white"
                android:insetBottom="0dp"
                app:backgroundTint="@color/delete"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_to_cart_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add To Cart"
                android:textColor="@color/white"
                android:layout_weight="50"
                android:gravity="center"
                app:cornerRadius="0dp"
                android:padding="10dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                />
        </LinearLayout>
    </RelativeLayout>
</layout>